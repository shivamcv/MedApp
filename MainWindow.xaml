<Window x:Class="MedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shifa Login" Height="350" Width="525">
    <Grid>
        <ListBox  x:Name="lstDemo"/>
        <Grid>
            <Label Content="User Name:" Height="28" HorizontalAlignment="Left" Name="lblUsername" VerticalAlignment="Top" Width="85" Margin="88,91,0,0" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="191,91,0,0" Name="txtUserName" VerticalAlignment="Top" Width="222" TabIndex="0"/>
            <Label Content="Password:" Height="28" HorizontalAlignment="Left" Margin="88,139,0,0" Name="lblPassword" VerticalAlignment="Top" />
            <PasswordBox Height="23" HorizontalAlignment="Left" Margin="191,139,0,0" Name="txtPassword" VerticalAlignment="Top" Width="222" PasswordChar="*" TabIndex="1"/>
            <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="338,194,0,0" Name="btnLogin" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" TabIndex="2"  IsDefault="True"/>

        </Grid>
    </Grid>
</Window>
